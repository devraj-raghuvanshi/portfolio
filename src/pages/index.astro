---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug";
import { Image } from "astro:assets";

const posts = await getCollection("blog");
const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="w-full px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Top Section with Image and Initial Text -->
      <div class="flex flex-col md:flex-row gap-8 mb-8">
        <!-- Profile Image -->
        <div class="w-full md:w-[300px] flex-shrink-0">
          <div class="overflow-hidden rounded-2xl shadow-xl">
            <img
              src="/devraj.jpg"
              alt="Devraj Raghuvanshi"
              class="w-full h-auto"
            />
          </div>
        </div>

        <!-- Initial Text Content -->
        <div class="flex-1">
          <div class="text-xl">Hey there ðŸ‘‹</div>
          <h1 class="text-5xl font-bold my-4">I'm Devraj Raghuvanshi</h1>
          <p class="text-lg">
            A graduate student pursuing a Master of Science (Sc.M.) in Data Science at
            <a class="text-blue-500 hover:text-blue-600" href="https://www.brown.edu/" target="_blank">Brown University</a>. Previously, I worked on multimodal sarcasm detection at the <a class="text-blue-500 hover:text-blue-600" href="https://www.rug.nl/?lang=en" target="_blank">University of Groningen</a>, Netherlands, and prior to that, I worked on projects at the intersection of natural language processing and sentiment analysis at the <a class="text-blue-500 hover:text-blue-600" href="https://www.iiti.ac.in/" target="_blank">Indian Institute of Technology Indore</a>, India.
          </p>
        </div>
      </div>

      <!-- Full Width Text Content -->
      <div class="space-y-6 text-lg">
        <p>
          I am broadly interested in deep learning, multimodal AI, and large language models (LLMs). My passion lies in working on complex problems at the intersection of AI and human-centric applications, pushing the boundaries of intelligent systems.
        </p>

        <p>
          If you want to get in touch, feel free to drop me an email!
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .text-gradient {
    background-image: linear-gradient(45deg, #4f46e5, #06b6d4);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
